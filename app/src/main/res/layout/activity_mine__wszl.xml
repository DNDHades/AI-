<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <include layout="@layout/include_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#160A6A">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_txClick"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:background="#1748BF">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_avatars"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13.5dp"
                    android:src="@drawable/mine_main_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="102dp"
                    android:text="点击修改头像"
                    android:textColor="#ffffffff"
                    android:textSize="11sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="9dp"
                android:background="#37869B" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#1748BF"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="39.5dp"
                    android:text="会员ID"
                    android:textColor="#ffffffff"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:textColor="#ffffffff"
                    android:textSize="11sp"
                    tools:text="888888" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#37869B" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#1748BF"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="39.5dp"
                    android:gravity="center_vertical"
                    android:text="昵称"
                    android:textColor="#ffffffff"
                    android:textSize="11sp" />

                <EditText
                    android:id="@+id/et_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="130dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLength="8"
                    android:textColor="#ffffffff"
                    android:textSize="11sp"
                    tools:text="AI云赞" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:maxLength="8"
                    android:textColor="#ffffffff"
                    android:textSize="11sp"
                    tools:text="可修改" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#37869B" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#1748BF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="39.5dp"
                    android:text="性别"
                    android:textColor="#ffffffff"
                    android:textSize="11sp" />

                <RadioGroup
                    android:id="@+id/rg_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="123dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_nan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:text="男"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                    <!--android:drawableLeft="@drawable/mine_wszl_radio_select"-->


                    <RadioButton
                        android:id="@+id/rb_nv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:checked="false"
                        android:drawablePadding="10dp"
                        android:text="女"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <!--android:drawableLeft="@drawable/mine_wszl_radio_select"-->

                </RadioGroup>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#37869B" />


            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="39.5dp"
                android:background="@drawable/mine_wszl_save_shape"
                android:paddingLeft="103dp"
                android:paddingRight="103dp"
                android:text="保存"
                android:textColor="#ABC6FF"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>