<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <include layout="@layout/toolbar_home__menu3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_menu3_2" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/home_menu3_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="47dp"
                    android:layout_marginTop="49.5dp"
                    android:text="AI云赞"
                    android:textColor="#ffffffff"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="49dp"
                    android:layout_marginRight="47dp"
                    android:text="分享码"
                    android:textColor="#ffffffff"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="102dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="科技改变未来"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人工智能时代"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI一键启动赚佣"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="短视频点赞专家"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="诚邀您扫码加入"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="246dp"
                    android:text="邀请码"
                    android:textColor="#ffffffff"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="286dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginRight="17dp"
                        android:background="@drawable/home_menu3_shape"
                        android:gravity="center"
                        android:textColor="#ffff0000"
                        android:textSize="24sp"
                        tools:text="8" />

                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginRight="17dp"
                        android:background="@drawable/home_menu3_shape"
                        android:textColor="#ffff0000"
                        android:textSize="24sp"
                        tools:text="8" />

                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginRight="17dp"
                        android:background="@drawable/home_menu3_shape"
                        android:textColor="#ffff0000"
                        android:textSize="24sp"
                        tools:text="8" />

                    <TextView
                        android:id="@+id/tv_4"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginRight="17dp"
                        android:background="@drawable/home_menu3_shape"
                        android:textColor="#ffff0000"
                        android:textSize="24sp"
                        tools:text="8" />

                    <TextView
                        android:id="@+id/tv_5"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:background="@drawable/home_menu3_shape"
                        android:textColor="#ffff0000"
                        android:textSize="24sp"
                        tools:text="8" />

                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="400dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_menu3_4" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="400dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/home_menu3_5" />

                <ImageView
                    android:id="@+id/iv_imgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="378dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_menu3_3" />

                <ImageView
                    android:id="@+id/iv_qrcode"
                    android:layout_width="160dp"
                    android:layout_height="140dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="396dp"
                    tools:src="@drawable/home_menu3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="590dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_menu3_6" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>